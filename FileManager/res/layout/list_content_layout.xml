<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="10dip"
	android:paddingRight="10dip"
	android:paddingTop="2dip"
	android:paddingBottom="2dip"
	android:background="@color/lightgray">
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:maxWidth="68dip"
		android:maxHeight="68dip"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_marginRight="6dip"
		android:id="@+id/content_icon"/>
		<ImageView
			android:id="@+id/content_multi_icon"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentTop="true"
			android:layout_alignParentBottom="true"
			android:layout_toRightOf="@id/content_icon"
			android:visibility="gone"/>
			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:paddingLeft="10dip"
				android:layout_toRightOf="@id/content_multi_icon"
				android:layout_alignParentTop="true"
				android:layout_alignParentRight="true">
				<TextView
					android:id="@+id/content_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceLarge"
					android:textColor="@color/white"/>
				<TextView
					android:id="@+id/content_subtext"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:gravity="right"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:textColor="@color/offWhite"/>
			</LinearLayout>
</RelativeLayout>